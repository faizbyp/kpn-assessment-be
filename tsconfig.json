{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "#dep/*": [
        "./*"
      ]
    },
    "moduleResolution": "node",
    "outDir": "./dist",
    "typeRoots": [
      "./types"
    ]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "skipLibCheck": true /* Skip type checking all .d.ts files. */
}